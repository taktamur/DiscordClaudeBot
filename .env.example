# Claude Code Configuration (optional)
# CLAUDE_TIMEOUT_SECONDS=1800
# MAX_MESSAGE_LENGTH=2000
# MAX_HISTORY_MESSAGES=50
# RATE_LIMIT_MESSAGES_PER_SECOND=5