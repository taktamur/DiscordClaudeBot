{
  "tasks": {
    // メイン実行（本番環境用）
    "start": "deno run --allow-net --allow-env --allow-run --allow-read --env-file=.env main.ts",
    // 開発実行（30秒タイムアウト付き）
    "dev": "deno run --allow-net --allow-env --allow-run --allow-read --env-file=.env main.ts --timeout 30",
    // ユニットテスト実行
    "test": "deno test --allow-env --allow-read src/",
    // ユニットテスト監視モード
    "test:watch": "deno test --allow-env --allow-read --watch src/",
    // E2Eテスト実行（120秒タイムアウト）
    "e2e": "deno run --allow-net --allow-env --allow-run --allow-read --env-file=.env.e2e main.ts --test --timeout 120",
    // E2Eテスト実行（60秒タイムアウト）
    "e2e:quick": "deno run --allow-net --allow-env --allow-run --allow-read --env-file=.env.e2e main.ts --test --timeout 60",
    // コードフォーマット
    "fmt": "deno fmt",
    // コードリント
    "lint": "deno lint",
    // 型チェック
    "check": "deno check main.ts src/ e2e/"
  },
  "fmt": {
    "include": ["src/", "e2e/", "main.ts"],
    "exclude": ["tmp/"] // 一時ファイルディレクトリを除外
  },
  "lint": {
    "include": ["src/", "e2e/", "main.ts"],
    "exclude": ["tmp/"] // 一時ファイルディレクトリを除外
  },
  "test": {
    "include": ["src/", "e2e/", "main.ts"],
    "exclude": ["tmp/"] // 一時ファイルディレクトリを除外（vitestファイル等）
  },
  "imports": {
    "@harmony/harmony": "jsr:@harmony/harmony" // Discord API ライブラリ
  }
}